@page
@model CleanContosoUniversity.Web.Pages.TodoLists.DetailsModel

@{
    ViewData["Title"] = "Todo List Details";
}

<h1>Details</h1>

<div>
    <h4>Todo List</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TodoList.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TodoList.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TodoList.Colour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TodoList.Colour)
        </dd>
        <dt class="col-sm-2">
            Items
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Done</th>
                        <th>Priority</th>
                        <th>Note</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TodoList.Items)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Done</td>
                            <td>@item.Priority</td>
                            <td>@item.Note</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.TodoList.Id">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>

